@using eShopSolution.ViewModels.Common
@model PagedResult<eShopSolution.ViewModels.System.Users.UserViewModel>

@{
    ViewData["Title"] = "Danh sách người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts{
    <script>
        setTimeout(function () {
            $('#Result').fadeOut("slow");
        }, 2000);
    </script>
}
<div class="container-fluid px-4">
    <h1 class="mt-4">Danh sách người dùng</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Home/Index">Trang chủ</a></li>
        <li class="breadcrumb-item active">Danh sách người dùng</li>
    </ol>
    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-3">
                    <p>
                        <a asp-action="Create" class="btn btn-primary">Tạo mới</a>
                    </p>
                </div>

                <div class="col-lg-2">

                </div>
                <div class="col-lg-7">
                    <form asp-action="Index">
                        <div class="input-group">
                            <input type="text" name="keyWord" value="@ViewBag.KeyWord" class="form-control" placeholder="Search Users">
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-secondary">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                            <div class="input-group-append">
                                <button type="button" onclick="window.location.href='/User/Index'" class="btn btn-secondary">
                                    <i class="fa fa-times"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        @if (ViewBag.SuccessMsg != null)
        {
            <div id="Result" class="alert alert-success" role="alert">
                @ViewBag.SuccessMsg
            </div>
        }
    </div>
    <div class="card mb-4">
        @*<div class="card-header">
            <i class="fas fa-table me-1"></i>
            DataTable Example
        </div>*@
        <div class="card-body">
            @* id="datatablesSimple" *@
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            ID
                        </th>
                        <th>
                            Họ và tên
                        </th>
                        <th>
                            Tài khoản
                        </th>
                        <th>
                            Ngày sinh
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Số Điện thoại
                        </th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @*@Html.DisplayFor(modelItem => item.Dob)*@
                                @* is working *@
                                @Convert.ToDateTime(item.Dob).ToString("dd/MM/yyyy")
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @await Component.InvokeAsync("Pager", Model)
        </div>
    </div>
</div>