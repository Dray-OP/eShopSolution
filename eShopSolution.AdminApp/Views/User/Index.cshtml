@using eShopSolution.ViewModels.Common
@model PagedResult<eShopSolution.ViewModels.System.Users.UserViewModel>

@{
    ViewData["Title"] = "Danh sách người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid px-4">
    <h1 class="mt-4">Tables Users</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/User/Index">User</a></li>
        <li class="breadcrumb-item active">Index</li>
    </ol>
    <div class="card mb-4">
        <div class="card-body">
            DataTables is a third party plugin that is used to generate the demo table below. For more information about DataTables, please visit the
            <a target="_blank" href="https://datatables.net/">official DataTables documentation</a>
            .
            <p>
                <a asp-action="Create" class="btn btn-primary">Tạo mới</a>
            </p>
            <form asp-action="Index">
                <div class="input-group">
                    <input type="text" name="keyWord" value="@ViewBag.KeyWord" class="form-control" placeholder="Search Users">
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-secondary">
                            <i class="fa fa-search"></i>
                        </button>
                    </div>
                    <div class="input-group-append">
                        <button type="button" onclick="window.location.href='/User/Index'" class="btn btn-secondary">
                            <i class="fa fa-times"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            DataTable Example
        </div>
        <div class="card-body">
            <table class="table" id="datatablesSimple">
                <thead>
                    <tr>
                        <th>
                            ID
                        </th>
                        <th>
                            Họ và tên
                        </th>
                        <th>
                            Tài khoản
                        </th>
                        <th>
                            Ngày sinh
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Số Điện thoại
                        </th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @*@Html.DisplayFor(modelItem => item.Dob)*@
                                @* is working *@
                                @Convert.ToDateTime(item.Dob).ToString("dd/MM/yyyy")
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @await Component.InvokeAsync("Pager", Model)
        </div>
    </div>
</div>